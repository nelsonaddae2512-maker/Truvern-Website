generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Organization {
  id        String   @id @default(cuid())
  name      String   @unique
  domain    String?
  plan      String   @default("free")
  seats     Int      @default(3)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model AssessmentSubmission {
  id           String   @id @default(cuid())
  companyName  String
  contactEmail String
  answersJson  Json
  createdAt    DateTime @default(now())
}
model Evidence {
  id          String   @id @default(cuid())
  userId      String
  title       String?
  description String?
  vendor      String?
  filename    String?
  url         String?
  size        Int?
  note        String?     // <-- added
  fileUrl     String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
model Usage {
  id              String   @id @default(cuid())
  organizationId  String
  userId          String?
  action          String?
  description     String?     // <-- added to match seed.ts
  value           Int      @default(0)
  meta            Json?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([organizationId, createdAt(sort: Desc)])
}
model Vendor {
  id          String   @id @default(cuid())
  name        String   @unique
  website     String?
  logoUrl     String?
  description String?    // used by seed.ts
  category    String?    // used by seed.ts
  trustScore  Int?       // used by seed.ts
  status      String   @default("active")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
